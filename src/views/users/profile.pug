extends ../base 
include ../mixins/video

block content
    div.container 
        div.profile__wrap
            div.profile__data
                if user.avatarUrl === NULL
                    i.fas.fa-user-circle
                else 
                    if loggedInUser.avatarUrl
                        if loggedInUser.avatarUrl.includes("github")
                            img(src=loggedInUser.avatarUrl).avatar
                        else
                            img(src="/" + user.avatarUrl).avatar
                h3=user.name
                
            div.video__content
                each video in user.videos 
                    +video(video) 
                else 
                    span.empty__message No videos found.
