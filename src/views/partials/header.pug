header
    div.header__warp
        div.header__start
            a(href="#").header__hmb
                i.fas.fa-bars
            a(href="/").header__logo
                i.fab.fa-youtube
        div.header__center  
            form(method="GET").search__form 
                input(placeholder="Search by title", name="keyword", type="text")
                button 
                    i.fas.fa-search 
            
        div.header__end 
            ul
                li
                    a(href="/search")
                        i.fas.fa-search
                if loggedIn
                    li
                        a(href="/videos/upload") Upload Video
                    li
                        a(href="/users/edit") Edit Profile
                    li
                        a(href="/users/logout")  Log Out
                    li
                        a(href=`/users/${loggedInUser._id}`) 
                            if loggedInUser.avatarUrl === NULL
                                i.fas.fa-user-circle.profile_img
                            else
                                if loggedInUser.avatarUrl
                                    if loggedInUser.avatarUrl.includes("github")
                                        img.header__avatar(src=loggedInUser.avatarUrl)
                                    else
                                        img.header__avatar(src="/" + loggedInUser.avatarUrl)
                else
                    li
                        a(href="/login") Login                        
                
                    li
                        a(href="/join").header__btn Join
                    